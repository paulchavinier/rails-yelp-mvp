<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, input_html: { placeholder: "Chez Jean-Louis" } %>
  <%= f.input :category, as: :select, collection: Restaurant::CATEGORIES, include_blank:  "Select a category" %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
